<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="postTitle"
      autofocus="true"
      size="150"
      autofocus
      autocomplete="off"
      required
    />
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea
      name="postBody"
      class="form-control"
      id="post"
      cols="151"
      rows="7"
      required
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>
